{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
    <h1>Catégorie : {{ category.name }}</h1>
    {{ include('category/_delete_form.html.twig') }}

    <hr>

    <div class="uk-child-width-1-2@s uk-child-width-1-3@m" uk-grid="masonry: true">
        
        {% for company in category.companies %}
            <div>
                <div class="uk-card uk-card-default">
                    <div class="uk-card-media-top">
                        <img src="{{ asset(company.imagePath) }}" alt="€{{ company.name }}">
                    </div>
                    <div class="uk-card-body">
                        <h3 class="uk-card-title">{{ company.name }}<span class="uk-text-default"> - {{ company.description }}</span></h3>
                        <a href="{{ path("company", {name: company.name} ) }}">Accéder</a>
                    </div>
                </div>
            </div>
        {% endfor %}
        
    </div>
{% endblock %}
